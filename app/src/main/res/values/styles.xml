<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- status bar 색상 바꿔야함 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/MAIN_WHITE</item>
        <item name="android:windowLightStatusBar"  tools:targetApi="23">true</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColorHint">@color/MAIN_BLACK</item>
        <item name="colorAccent">@color/MAIN_BLACK</item>
        <item name="colorControlNormal">@color/MAIN_BLACK</item>
        <item name="colorControlActivated">@color/MAIN_BLACK</item>
        <item name="colorError">@color/colorAccent</item>
    </style>

</resources>
